/**index.wxss**/

/**{margin:0;padding:0;}*/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.todo {
  display: flex;
  flex-direction: row;
  height: 70rpx;
  width: 100%;
  margin: 20rpx;
}

.inputview {
  flex: 1;
  background-color: #bbb;
  line-height: 70rpx;
  height: 70rpx;
  margin-left: 20rpx;
  border-radius: 6rpx;
  border-width: 3rpx;
  border-color: red;
  padding-left: 20rpx;
}

.addBtn {
  font-size: 28rpx;
  background-color: limegreen;
  margin-right: 20rpx;
  margin-left: 10rpx;
}

.todo-list {
  display: flex;
  height: 46rpx;
  width: 100%;
  border-width: 3rpx;
  border-color: lightgray;
}

.item {
  height: 60rpx;
  width: 100%;
  /*边框弧度*/
  border-radius: 6rpx;
  border-width: 3rpx;
  border-color: red;
  text-shadow: 0 2rpx 2rpx rgb(0, 0, 0, 3);
}

.tvtodo {
  flex: 1;
  height: 46rpx;
  font-size: 28rpx;
  line-height: 46rpx;
  align-content: center;
  padding-left: 20rpx;
}

.todo-footer {
  display: flex;
  flex-direction: row;
  height: 46rpx;
  width: 100%;
  margin: 20rpx;
}

.tv-unfinished {
  height: 46rpx;
  font-size: 28rpx;
  text-align: 46rpx;
  line-height: 46rpx;
  align-content: center;
  margin-left: 20rpx;
}

.btn-footer {
  height: 46rpx;
  font-size: 28rpx;
  text-align: center;
}

/*btn点击样式*/

.other-button-hover {
  background-color: cornflowerblue;
  border: 2rpx solid red;
}

/*btn 选中的样式*/

.button-click {
  height: 46rpx;
  font-size: 28rpx;
  text-align: center;
  border: 2rpx solid red;
}
